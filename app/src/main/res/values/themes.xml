<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tema base -->
    <style name="Base.Theme.SleepTracker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Color primario -->
        <item name="colorPrimary">@color/primary</item>
        <!-- Color primario oscuro -->
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <!-- Color de acento -->
        <item name="colorAccent">@color/secondary</item>
        <!-- Fondo -->
        <item name="android:windowBackground">@color/background</item>
    </style>

    <!-- Tema de la aplicaciÃ³n -->
    <style name="Theme.SleepTracker" parent="Base.Theme.SleepTracker" />

    <!-- Estilos personalizados -->
    <style name="HeaderTitle" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="SensorValue" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="SensorLabel" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/gray600</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="StatusText" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/gray400</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- CardView personalizado -->
    <style name="SensorCard">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>
</resources>