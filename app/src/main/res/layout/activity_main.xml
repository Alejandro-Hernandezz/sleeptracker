<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ========== HEADER ========== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primaryDark"
            android:orientation="vertical"
            android:padding="20dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sleep Tracker"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Conectando..."
                android:textSize="13sp"
                android:textColor="@color/status_connecting"
                android:fontFamily="sans-serif" />
        </LinearLayout>

        <!-- ========== CONTENEDOR PRINCIPAL ========== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- ========== CARD CALIDAD DE SUEÑO ========== -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="6dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Calidad de Sueño"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/onSurface"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- Score Circle -->
                        <LinearLayout
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/circle_bg"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvSleepScore"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:textSize="32sp"
                                android:textStyle="bold"
                                android:textColor="@color/primary"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="/100"
                                android:textSize="12sp"
                                android:textColor="@color/gray500" />
                        </LinearLayout>

                        <!-- Info -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="16dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvSleepLevel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Calculando..."
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/onSurface"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/tvSleepRecommendation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Analizando condiciones..."
                                android:textSize="14sp"
                                android:textColor="@color/gray600"
                                android:fontFamily="sans-serif" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ========== GRID DE SENSORES (2x3) ========== -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sensores en Tiempo Real"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/onBackground"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="12dp" />

            <!-- Fila 1: Temperatura y Humedad -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <!-- Temperatura -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="@color/surface">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="●"
                            android:textSize="24sp"
                            android:textColor="@color/temp_optimal"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Temperatura"
                            android:textSize="12sp"
                            android:textColor="@color/gray600"
                            android:fontFamily="sans-serif"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/tvTemperatura"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--°C"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/onSurface"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Humedad -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="@color/surface">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="●"
                            android:textSize="24sp"
                            android:textColor="@color/humidity_optimal"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Humedad"
                            android:textSize="12sp"
                            android:textColor="@color/gray600"
                            android:fontFamily="sans-serif"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/tvHumedad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--%"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/onSurface"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Fila 2: Pulso y Movimiento -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <!-- Pulso -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="@color/surface">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="♥"
                            android:textSize="24sp"
                            android:textColor="@color/heart_optimal"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pulso"
                            android:textSize="12sp"
                            android:textColor="@color/gray600"
                            android:fontFamily="sans-serif"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/tvPulso"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-- BPM"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/onSurface"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Movimiento -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="@color/surface">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="◐"
                            android:textSize="24sp"
                            android:textColor="@color/movement_still"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Movimiento"
                            android:textSize="12sp"
                            android:textColor="@color/gray600"
                            android:fontFamily="sans-serif"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/tvAceleracion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-- g"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/onSurface"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Fila 3: Luz -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <!-- Luz -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="@color/surface">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="☀"
                            android:textSize="24sp"
                            android:textColor="@color/light_dark"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Luz Ambiental"
                            android:textSize="12sp"
                            android:textColor="@color/gray600"
                            android:fontFamily="sans-serif"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/tvLuz"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--%"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/onSurface"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Espacio vacío para mantener el grid -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp" />
            </LinearLayout>

            <!-- ========== CONTROL DE ALARMA ========== -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Control de Alarma"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/onSurface"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAlarma"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Activar Alarma"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        app:backgroundTint="@color/alarm_inactive"
                        app:cornerRadius="8dp"
                        app:elevation="0dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ========== TIMESTAMP ========== -->
            <TextView
                android:id="@+id/tvUltimaActualizacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Última actualización: --:--:--"
                android:textSize="12sp"
                android:textColor="@color/gray500"
                android:fontFamily="sans-serif"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
